<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/page1Fragment">

    <fragment
        android:id="@+id/page1Fragment"
        android:name="com.github.droibit.nav.animation.sample.Page1Fragment"
        android:label="Page1Fragment" >
        <action
            android:id="@+id/action_page1Fragment_to_page2Fragment"
            app:destination="@id/page2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.github.droibit.nav.animation.sample.Page2Fragment"
        android:label="Page2Fragment" >
        <action
            android:id="@+id/action_page2Fragment_to_page3Fragment"
            app:destination="@id/page3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page3Fragment"
        android:name="com.github.droibit.nav.animation.sample.Page3Fragment"
        android:label="Page3Fragment" >
        <action
            android:id="@+id/action_page3Fragment_to_page4Fragment"
            app:destination="@id/page4Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page4Fragment"
        android:name="com.github.droibit.nav.animation.sample.Page4Fragment"
        android:label="Page4Fragment" />
</navigation>